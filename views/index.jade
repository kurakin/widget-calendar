  script(type='application/javascript', src='/Deferred.js')
  script(type='application/javascript', src='/Syncro.js')
  script(type='application/javascript', src='/EventBus.js')
  script(type='application/javascript', src='/api.js')
  script(type='application/javascript', src='/DateHelper.js')
  script(type='application/javascript', src='/Calendar.js')
