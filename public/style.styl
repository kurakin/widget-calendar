.container-fluid
  margin 2em 1em

footer
  width 100%
  margin-top 70px
  padding 30px 0
  text-align center
  background-color #f5f5f5
  border-top 1px solid #e5e5e5

.direction
  position absolute
  top 1em
  right 1em

  a
    color #000

    &:hover
      text-decoration none

  .btn-primary a
    color #fff

.calendar table tbody tr td
  padding 3px

.day
  cursor pointer

  &:hover
    background-color #d9edf7

.day.invalid
  color #ccc
  cursor default

  &:hover
    background none

.day.selected
  background-color #dff0d8

.calendar-inline-dual

  .calendar table:first-child
    float left
    margin-right 1em
